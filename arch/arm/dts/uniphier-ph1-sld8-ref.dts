/dts-v1/;
/include/ "uniphier-ph1-sld8.dtsi"

/ {
	model = "Panasonic UniPhier PH1-sLD8 Reference Board";
	compatible = "panasonic,ph1-sld8-ref", "panasonic,ph1-sld8";

	memory {
		device_type = "memory";
		reg = <0x80000000 0x20000000>;
	};

	chosen {
		bootargs = "console=ttyPS0,115200 earlyprintk";
		stdout-path = &uart0;
	};
};

&uart0 {
       status = "okay";
};

&uart1 {
       status = "okay";
};

&usb0 {
      status = "okay";
};

&usb1 {
      status = "okay";
};
