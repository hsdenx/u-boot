menu "Sandbox architecture"
	depends on SANDBOX

config SYS_ARCH
	default "sandbox"

config SYS_BOARD
	default "sandbox"

config SYS_CONFIG_NAME
	default "sandbox"

config DM_TEST
	default y

config PCI
	bool "PCI support"
	help
	  Enable support for PCI (Peripheral Interconnect Bus), a type of bus
	  used on some devices to allow the CPU to communicate with its
	  peripherals.

config NET
	default y

config NETDEVICES
	default y

config DM_ETH
	default y

config ETH_SANDBOX_RAW
	default y

endmenu
